<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1000px"
    android:layout_height="226px">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5px"
        android:background="@drawable/dialog_evideo_custom_no_title_bg">

        <TextView
            android:id="@+id/dialog_evideo_custom_title_text"
            android:layout_width="1000px"
            android:layout_height="108px"
            android:gravity="left|center_vertical"
            android:paddingLeft="30px"
            android:text="重启"
            android:textColor="@color/white"
            android:textSize="24px" />

        <TextView
            android:id="@+id/dialog_evideo_custom_text"
            android:layout_width="1000px"
            android:layout_height="108px"
            android:paddingLeft="30px"
            android:gravity="left|center_vertical"
            android:text="正在重启..."
            android:textSize="20px"
            android:textColor="#999999"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-420px"
        android:layout_marginTop="0px"
        android:layout_marginRight="8px">

        <ImageView
            android:id="@+id/dialog_evideo_custom_top"
            android:layout_width="500px"
            android:layout_height="20px"
            android:background="@drawable/dialog_evideo_custom_top_bg"/>
    </LinearLayout>
</RelativeLayout>