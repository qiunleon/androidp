<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/button_llyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Dialog" />

            <Button
                android:id="@+id/button_asynctask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_dialog"
                android:layout_weight="1"
                android:text="Start AsyncTask" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_broadcast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_asynctask"
                android:layout_weight="1"
                android:text="Send BroadCast" />

            <Button
                android:id="@+id/button_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_broadcast"
                android:layout_weight="1"
                android:text="Post" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_compute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_asynctask"
                android:layout_weight="1"
                android:text="COMPUTE" />

            <Button
                android:id="@+id/button_encrypt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_broadcast"
                android:layout_weight="1"
                android:text="ENCRYPT" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_start_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_post"
                android:layout_weight="1"
                android:text="Start Record" />

            <Button
                android:id="@+id/button_stop_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_post"
                android:layout_weight="1"
                android:text="Stop Record" />
        </LinearLayout>

        <Button
            android:id="@+id/button_shell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_post"
            android:text="Run Shell" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageview_get"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/button_post"
                android:scaleType="centerInside" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone" />
</RelativeLayout>
