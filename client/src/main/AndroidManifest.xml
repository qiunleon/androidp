<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.client">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.client.application.ClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.client.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity="com.example.client">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.client.activity.ImageActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.example.client.activity.DetailActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.example.client.activity.LinearActivity"
            android:label="@string/title_activity_line"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LinearScrollActivity"
            android:label="滑动显示隐藏布局"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.client.activity.GridActivity"
            android:label="@string/title_activity_grid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.client.activity.StaggeredActivity"
            android:label="@string/title_activity_staggered"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name="com.example.client.receiver.BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>